  <a href="#" id="backToTop" class="hidden fixed bottom-5 right-5 bg-green-600 text-white w-10 h-10 rounded-full flex items-center justify-center text-xl hover:bg-green-700 transition">&#8679;</a>

  <!-- AOS JS -->
  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  <script>
    AOS.init({
      duration: 800,
      offset: 100,
    });
  </script>

  <script>
    // Current year
    document.getElementById('year').textContent = new Date().getFullYear();

    // Mobile Menu Toggle
    const menuBtn = document.getElementById('menuBtn');
    const mobileMenu = document.getElementById('mobileMenu');
    menuBtn.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });

    // Back to Top Button
    const backToTop = document.getElementById('backToTop');
    window.addEventListener('scroll', () => {
      if (window.scrollY > 300) {
        backToTop.classList.remove('hidden');
      } else {
        backToTop.classList.add('hidden');
      }
    });

    // Basic Form Submission Simulation
    const estimateForm = document.getElementById('estimateForm');
    estimateForm.addEventListener('submit', (e) => {
      e.preventDefault();
      // Basic validation
      const requiredFields = ['name', 'email', 'phone', 'propertyType', 'serviceType'];
      for (let f of requiredFields) {
        if (!document.getElementById(f).value.trim()) {
          alert("Please fill in all required fields.");
          return;
        }
      }
      alert("Your estimate request has been submitted! We'll get back to you soon.");
      estimateForm.reset();
    });

    // Testimonial Slider
    let slideIndex = 0;
    const slides = document.querySelectorAll('.testimonial-slide');
    function showSlide() {
      slides.forEach((slide, i) => {
        slide.classList.remove('active');
      });
      slides[slideIndex].classList.add('active');
      slideIndex = (slideIndex + 1) % slides.length;
    }
    showSlide();
    setInterval(showSlide, 5000); // change testimonial every 5 seconds
  </script>
